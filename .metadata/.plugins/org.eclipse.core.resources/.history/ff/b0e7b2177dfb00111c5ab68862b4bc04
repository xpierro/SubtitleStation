package org.opticalbox.subtitlestation.model;

import java.util.LinkedList;
import java.util.List;

/**
 * Classe représentant une phrase de sous-titre dans une langue donnée.
 * @author Pierre
 *
 */
public class SubtitleSentenceModel {
	private SubtitleTimeRangeModel timeRange;
	private LinkedList<SubtitleLineModel> lines;
	
	public SubtitleSentenceModel(SubtitleTimeRangeModel timeRange, List<SubtitleLineModel> lines) {
		this.timeRange = timeRange;
		this.lines.addAll(lines);
	}
	
	public SubtitleSentenceModel(SubtitleTimeRangeModel timeRange) {
		this(timeRange, new LinkedList<E>());
	}
}
